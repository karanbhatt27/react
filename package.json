{
  "name": "react-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start:api": "node packages/api/server.js",
    "start:ui": "parcel packages/ui/index.html --open",
    "start": "concurrently \"npm run start:api\" \"npm run start:ui\"",
    "dev": "concurrently \"npm run start:api\" \"npm run start:ui\"",
    "build:api": "node -c packages/api/server.js && echo 'API syntax valid'",
    "build:ui": "parcel build packages/ui/index.html",
    "build": "npm run build:api && npm run build:ui",
    "test:api": "node packages/api/test.js",
    "test:ui": "jest --testPathPattern=packages/ui",
    "test": "npm run test:api && npm run test:ui"
  },
  "dependencies": {
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "mongoose": "^9.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-react": "^7.28.5",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.3.2",
    "babel-jest": "^30.2.0",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^2.0.22",
    "parcel": "^2.16.3"
  }
}
